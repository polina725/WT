<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>by.bsuir.controller.LoginController</servlet-class>
        <!--jsp-file>/WEB-INF/jspFiles/main.jsp</jsp-file-->
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/change_lang</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <servlet-class>by.bsuir.controller.RegisterController</servlet-class>
        <!--jsp-file>/WEB-INF/jspFiles/register.jsp</jsp-file-->
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EnrollmentForm</servlet-name>
        <servlet-class>by.bsuir.controller.EnrollmentController</servlet-class>
        <!--jsp-file>/WEB-INF/jspFiles/enroll.jsp</jsp-file-->
    </servlet>

    <servlet-mapping>
        <servlet-name>EnrollmentForm</servlet-name>
        <url-pattern>/enroll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepartmentsPage</servlet-name>
        <servlet-class>by.bsuir.controller.Controller</servlet-class>
        <!--jsp-file>/WEB-INF/jspFiles/enroll.jsp</jsp-file-->
    </servlet>

    <servlet-mapping>
        <servlet-name>DepartmentsPage</servlet-name>
        <url-pattern>/departments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminsPage</servlet-name>
        <servlet-class>by.bsuir.controller.AdminController</servlet-class>
        <!--jsp-file>/WEB-INF/jspFiles/enroll.jsp</jsp-file-->
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminsPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.bsuir.controller.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/</url-pattern>
        <servlet-name>RegisterPage</servlet-name>
        <servlet-name>MainPage</servlet-name>
        <servlet-name>AdminsPage</servlet-name>
        <servlet-name>DepartmentsPage</servlet-name>
        <servlet-name>EnrollmentForm</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>by.bsuir.controller.RoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/</url-pattern>
        <servlet-name>EnrollmentForm</servlet-name>
        <servlet-name>AdminsPage</servlet-name>
    </filter-mapping>
</web-app>